{{!-- Login Page --}}
<main id="login" class="flex-center">
    <div id="card" class="shadow">
        <div id="card-container">
            <h2>Login</h2>
            <p>Welcome to TuneStack!</p>
            <form id="login-form" class="flex-center-x">
                <input id="username-input" type="text" name="username" placeholder="Username">
                <input id="password-input" type="password" name="password" placeholder="Password"><br>
                <button id="login-button" class="shadow" type="submit">Login</button>
                <p>Don't have an account? <a href="/signup">Sign Up</a></p>
            </form>
        </div>
    </div>
</main>

{{!-- Login Script --}}
<script src="/handlers/auth/login_hdlr.js"></script>