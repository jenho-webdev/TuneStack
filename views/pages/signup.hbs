{{!-- Sign Up Page --}}
<main id="signup" class="flex-center">
    <div id="card" class="shadow">
        <div id="card-container">
            <h2>Sign Up</h2>
            <p>Join TuneStack!</p>
            <form id="signup-form" class="flex-center-x">
                <input id="username-input" type="text" name="username" placeholder="Username">
                <input id="password-input" type="password" name="password" placeholder="Password"><br>
                <button id="signup-button" class="shadow" type="submit">Sign Up</button>
                <span id="error-message"></span>
                <p>Already have an account? <a href="/login">Login</a></p>
            </form>
        </div>
    </div>
</main>

{{!-- Sign Up Script --}}
<script src="/handlers/forms/signup_hdlr.js"></script>